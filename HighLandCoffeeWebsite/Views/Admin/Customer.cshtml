@model List<HighLandCoffeeWebsite.Models.User>
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="admin-dashboard container mt-4">
    <h2 class="dashboard-title text-center mb-4">Quản lý Người Dùng</h2>

    <!-- Thanh tìm kiếm -->
    <form method="get" action="@Url.Action("Customer", "Admin")" class="mb-4 d-flex">
        <input type="text" name="search" class="form-control me-2" placeholder="Tìm kiếm theo mã, tên tài khoản, tên người dùng, email..." value="@ViewBag.SearchQuery" />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>

    <!-- Bảng danh sách người dùng -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">ID</th>
                    <th scope="col">Tên tài khoản</th>
                    <th scope="col">Tên người dùng</th>
                    <th scope="col">Email</th>
                    <th scope="col">Số điện thoại</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col" class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var user in Model)
                    {
                        <tr>
                            <td class="text-center">@user.UserId</td>
                            <td>@user.UserName</td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Address</td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", "Admin", new { id = user.UserId })" class="btn btn-primary btn-sm me-2">
                                    <i class="fas fa-edit"></i> Chỉnh sửa
                                </a>
                                <a href="@Url.Action("Delete", "Admin", new { id = user.UserId })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?')">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Không tìm thấy người dùng nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Phân trang -->
    @*<nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
